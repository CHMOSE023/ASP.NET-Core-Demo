@model RoleAddViewModel

@{
    ViewBag.Title = "添加角色";
}

<h2>@ViewBag.Title</h2>


<form method="post">
    <div class="card-group row">

        <label asp-for="RoleName" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="RoleName"/>
            <span style="color:red"  asp-validation-for="RoleName" />

        </div>
    </div>
    <div style="color:green"  class="invalid" asp-validation-summary="ModelOnly"></div>
    
    <button type="submit" class="btn btn-primary">提交 </button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>

</form>